@model Fitness_Shop.ViewModels.Preview.IndexVM;

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content(Model.Product.PhotoURL)" class="img-fluid" alt="@Model.Product.Name">
        </div>
        <div class="col-md-6">
            <h1 class="display-4">@Model.Product.Name</h1>
            <p class="lead">@Model.Product.Description</p>
            <h3 class="text-primary">Price: @Model.Product.Price</h3>

            <h4>Reviews:</h4>
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <ul class="list-group">
                    @foreach (var review in Model.Reviews)
                    {
                        <li class="list-group-item">@review.Comment</li>
                    }
                </ul>
            }
            else
            {
                <p>No reviews available.</p>
            }

            <div class="mt-3">
                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.Product.Id" class="btn btn-success">Add to cart</a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
</div>
