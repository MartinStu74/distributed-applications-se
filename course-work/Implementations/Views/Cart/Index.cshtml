@model Fitness_Shop.ViewModels.Cart.IndexVM;
<h2>Your Shopping Cart</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product item in Model.Products)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("F2")</td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-action="RemoveFromCart" asp-controller="Cart" asp-route-id="@item.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Continue Shopping</a>
    <a class="btn btn-primary" asp-action="Buy" asp-controller="Cart">Buy</a>
</div>
